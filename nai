        <div class="card">
            <h2>üî° Let's Learn the Alphabet!</h2>
            <div class="alphabet">
                <button onclick="learnLetter('A')">A</button>
                <button onclick="learnLetter('B')">B</button>
                <button onclick="learnLetter('C')">C</button>
                <button onclick="learnLetter('D')">D</button>
                <button onclick="learnLetter('E')">E</button>
                <button onclick="learnLetter('F')">F</button>
                <button onclick="learnLetter('G')">G</button>
                </div>
            <p id="letter-output" style="font-size: 2em; margin-top: 10px;">Click a letter to learn its sound!</p>
        </div>

