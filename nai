    <script>
        // --- Phonics ---
        function learnLetter(letter) {
            const letterOutput = document.getElementById('letter-output');
            const phonicSounds = {
                'A': 'A is for Apple!',
                'B': 'B is for Ball!',
                'C': 'C is for Cat!',
                'D': 'D is for Dog!',
                'E': 'E is for Egg!',
                'F': 'F is for Fish!',
                'G': 'G is for Grapes!'
                // Add more letters and words here!
            };
            letterOutput.textContent = phonicSounds[letter] || `We're learning the letter ${letter}!`;
            // Optional: You can embed a YouTube video here
            // Example:
            // letterOutput.innerHTML += `<iframe width="100%" height="315" src="https://www.youtube.com/embed/your_video_id" frameborder="0" allowfullscreen></iframe>`;
        }
        
        // --- Counting Game ---
        let starCount = 0;
        function addStar() {
            if (starCount < 10) { // Limit to 10 stars for simplicity
                starCount++;
                const starContainer = document.getElementById('star-container');
                const star = document.createElement('span');
                star.textContent = '‚≠ê';
                star.classList.add('star');
                starContainer.appendChild(star);
                document.getElementById('count-output').textContent = starCount;
            }
        }
        
        // --- Shape and Color Game ---
        function checkShape(guess) {
            const result = document.getElementById('shape-result');
            if (guess === 'circle') {
                result.textContent = "That's right, it's a circle! üëç";
                result.style.color = 'green';
            } else {
                result.textContent = "Oops, try again! ü§î";
                result.style.color = 'red';
            }
        }

        // --- Animal Recognition ---
        const animals = [
            { name: "Lion", image: "https://images.unsplash.com/photo-1546700812-4293f9c6d32f?q=80&w=1000&auto=format&fit=crop" },
            { name: "Elephant", image: "https://images.unsplash.com/photo-1563227807-f370aa0ac1b5?q=80&w=1000&auto=format&fit=crop" },
            { name: "Giraffe", image: "https://images.unsplash.com/photo-1579737198759-4d6402432709?q=80&w=1000&auto=format&fit=crop" },
            { name: "Zebra", image: "https://images.unsplash.com/photo-1550974163-952084c8a5ef?q=80&w=1000&auto=format&fit=crop" }
        ];
        let currentAnimalIndex = 0;
        const animalDisplay = document.getElementById('animal-display');
        const animalImage = document.getElementById('animal-image');
        
        function changeAnimal() {
            currentAnimalIndex = (currentAnimalIndex + 1) % animals.length;
            const animal = animals[currentAnimalIndex];
            animalDisplay.textContent = `It's a ${animal.name}!`;
            animalImage.src = animal.image;
        }

    </script>
