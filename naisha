<body>

    <div class="container">
        <h1>Welcome to Your School! 🏫</h1>
        <p>A special place just for you to learn and have fun. ❤️</p>

        <hr>

        <h2>🦁 Let's Learn About Animals!</h2>
        <p id="animal-display">Click the buttons to see a new animal!</p>
        <button onclick="changeAnimal()">Change Animal</button>
        <img id="animal-image" src="https://via.placeholder.com/200" alt="Animal Image">

        <hr>

        <h2>🔡 Phonics & Objects</h2>
        <p id="object-display">Click an object to hear its beginning sound!</p>
        <div id="object-buttons-container">
            </div>
        <p>The sound is for: <span id="phonic-sound"></span></p>
        
        <hr>

        <h2>➕ Simple Math Game</h2>
        <p>What is <span id="num1">?</span> + <span id="num2">?</span> = </p>
        <input type="text" id="math-answer" placeholder="Your Answer">
        <button onclick="checkMathAnswer()">Check Answer</button>
        <p id="math-result"></p>

    </div>

    <script>
        // --- Animal Recognition ---
        const animals = [
            { name: "Lion", image: "https://images.unsplash.com/photo-1546700812-4293f9c6d32f?q=80&w=1000&auto=format&fit=crop" },
            { name: "Elephant", image: "https://images.unsplash.com/photo-1563227807-f370aa0ac1b5?q=80&w=1000&auto=format&fit=crop" },
            { name: "Giraffe", image: "https://images.unsplash.com/photo-1579737198759-4d6402432709?q=80&w=1000&auto=format&fit=crop" }
        ];
        let currentAnimalIndex = 0;
        const animalDisplay = document.getElementById('animal-display');
        const animalImage = document.getElementById('animal-image');
        
        function changeAnimal() {
            currentAnimalIndex = (currentAnimalIndex + 1) % animals.length;
            const animal = animals[currentAnimalIndex];
            animalDisplay.textContent = `It's a ${animal.name}!`;
            animalImage.src = animal.image;
        }

        // --- Phonics & Objects ---
        const objects = [
            { name: "Apple", image: "https://images.unsplash.com/photo-1576174640103-6059d4379e43?q=80&w=2000&auto=format&fit=crop" },
            { name: "Ball", image: "https://images.unsplash.com/photo-1579952402283-a4e9b9c9f2b8?q=80&w=2000&auto=format&fit=crop" },
            { name: "Cat", image: "https://images.unsplash.com/photo-1596854528075-c9a066580f48?q=80&w=2000&auto=format&fit=crop" },
            { name: "Dog", image: "https://images.unsplash.com/photo-1589156229687-f20a719b6924?q=80&w=2000&auto=format&fit=crop" }
        ];
        
        const phonicSoundSpan = document.getElementById('phonic-sound');
        const objectButtonsContainer = document.getElementById('object-buttons-container');
        
        // Function to create and add the image buttons
        function createObjectButtons() {
            objects.forEach(obj => {
                const button = document.createElement('button');
                button.className = 'object-button';
                button.onclick = () => playPhonic(obj.name);

                const img = document.createElement('img');
                img.src = obj.image;
                img.alt = obj.name;

                button.appendChild(img);
                objectButtonsContainer.appendChild(button);
            });
        }
        
        function playPhonic(objectName) {
            phonicSoundSpan.textContent = `The sound is for: ${objectName}`;
            // You can add a text-to-speech or audio file here later!
        }
        
        // --- Simple Math Game ---
        let correctAnswer;
        const num1Span = document.getElementById('num1');
        const num2Span = document.getElementById('num2');
        const mathResultP = document.getElementById('math-result');

        function generateNewProblem() {
            const num1 = Math.floor(Math.random() * 5) + 1; // Numbers 1-5
            const num2 = Math.floor(Math.random() * 5) + 1; // Numbers 1-5
            num1Span.textContent = num1;
            num2Span.textContent = num2;
            correctAnswer = num1 + num2;
        }

        function checkMathAnswer() {
            const userAnswer = parseInt(document.getElementById('math-answer').value, 10);
            if (userAnswer === correctAnswer) {
                mathResultP.textContent = "Great job, that's right! 👍";
                mathResultP.style.color = "green";
                setTimeout(() => {
                    generateNewProblem();
                    document.getElementById('math-answer').value = '';
                    mathResultP.textContent = '';
                }, 2000); // Wait 2 seconds before showing a new problem
            } else {
                mathResultP.textContent = "Oops, try again! 🤔";
                mathResultP.style.color = "red";
            }
        }
        
        // Start games when the page loads
        createObjectButtons();
        generateNewProblem();

    </script>
</body>
